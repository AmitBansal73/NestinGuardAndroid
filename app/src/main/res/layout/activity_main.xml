<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anvisys.nestinguard.MainActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                >
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_inner"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"

        >
        <EditText
            android:id="@+id/txtOTP"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:hint="Enter Code"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:background="@drawable/edittext_bg"
            android:visibility="gone"
           />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/inputcode1"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                android:maxLength="1"
                android:textStyle="bold"
                android:background="@drawable/edittext_bg"
                />
            <EditText
                android:id="@+id/inputcode2"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                android:maxLength="1"
                android:textStyle="bold"
                android:background="@drawable/edittext_bg"
                />
            <EditText
                android:id="@+id/inputcode3"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                android:maxLength="1"
                android:textStyle="bold"
                android:background="@drawable/edittext_bg"
                />
            <EditText
                android:id="@+id/inputcode4"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/edittext_bg"

                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:gravity="center">
            <Button
                android:id="@+id/verify_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="varify"
                android:textColor="@color/colorWhite"
                android:background="@drawable/background_btn"/>
                <Button
                    android:id="@+id/btnCheckIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_btn"
                    android:text="Check In"
                    android:padding="10dp"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtValidate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorBlue"
            android:text="Verify"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            />

    </LinearLayout>
<!--    <Button-->
<!--        android:id="@+id/btnCheckIn"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="@drawable/background_btn"-->
<!--        android:text="Check In"-->
<!--        android:layout_margin="20dp"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:visibility="gone"-->
<!--        />-->

        <LinearLayout
            android:id="@+id/viewVisitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="Visitor Information"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:layout_marginTop="10dp"

                />
                    <LinearLayout
                        android:id="@+id/viewVisitorInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="@color/colorWhite"
                        >
                        <TextView
                            android:id="@+id/txtVisitorName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlack"
                            android:drawableLeft="@drawable/ic_person_24dp"

                            />
                        <TextView
                            android:id="@+id/txtVisitorMobile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlack"
                            android:drawableLeft="@drawable/ic_local_phone_24dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/viewVisitorInfo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:textColor="@color/txtcolor"
                        android:background="@color/colorWhite"

                        >
                        <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="@color/txtcolor"
                            android:drawableLeft="@drawable/ic_location_on_24"
                            />
                        <TextView
                            android:id="@+id/txtPurpose"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="@color/txtcolor"
                            android:drawableLeft="@drawable/ic_flat_24dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/viewVisitTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:textColor="@color/colorBlack"
                        android:background="@color/colorWhite"
                        >
                        <TextView
                            android:id="@+id/txtStartTime"
                            android:layout_width="0dp"
                            android:text=" "
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"
                            />
                        <TextView
                            android:id="@+id/txtEndTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorGrey"
                        />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="Host Information"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                />

                    <LinearLayout
                        android:id="@+id/viewHostInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="@color/colorWhite"
                        >
                        <TextView
                            android:id="@+id/txtHostName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/txtcolor"
                            android:textSize="18sp"
                            />
                        <TextView
                            android:id="@+id/txtHostMobile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/txtcolor"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/viewFlatInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="@color/colorWhite"
                        >
                        <TextView
                            android:id="@+id/txtFlatNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textColor="@color/txtcolor"
                            />
                        <TextView
                            android:id="@+id/txtFlatIntercom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textColor="@color/txtcolor"
                            />
                    </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
        <TextView
            android:id="@+id/txtMessagechek_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="Visitor chek In by Guard Amit "
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_gravity="center|center_vertical"
        android:elevation="10dp"
        android:visibility="gone"
        />

</android.support.design.widget.CoordinatorLayout>