<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <View
        android:id="@+id/statusBar"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="2dp"
        android:elevation="5dp"
        android:visibility="gone"
        >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_white"
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/employ_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/user_image"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="4"
                    android:drawableLeft="@drawable/ic_person_24dp"
                    android:padding="3dp"
                    android:layout_gravity="center"
                    android:text="name"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/txtcolor"
                    android:drawablePadding="5dp"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/background_white"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:padding="3dp"
                    android:text="Id No"
                    android:textColor="@color/txtcolor"
                    android:drawableLeft="@drawable/ic_baseline_numbers_24"
                    android:textSize="17sp" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:layout_marginLeft="10dp"

                    >
                    <TextView
                        android:id="@+id/txtMobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:padding="2dp"
                        android:text="Mobile Number"
                        android:maxLines="1"
                        android:textColor="@color/txtcolor"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:textSize="17sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_local_phone_24dp"
                        />

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_location_on_24"
                        android:text="Address"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:textColor="@color/txtcolor"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/txtFlat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:text="Flat"
                        android:textColor="@color/txtcolor"
                        android:textSize="18sp"
                        android:drawableLeft="@drawable/ic_flat_24dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txtActualInTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_access_time_24"
                        android:text="ActualInTime"
                        android:textColor="@color/txtcolor"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:textSize="17sp" />

                    <Button
                        android:id="@+id/btnCheckInn"
                        android:layout_width="65dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="false"
                        android:text="chakIn"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_btn"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>





    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>